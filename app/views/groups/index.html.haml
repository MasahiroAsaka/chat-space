%html
  %body
    .wrapper
      .contents
        .user
          .user-contents
            %h3.user-contents__name
              = current_user.name
            %li.user-contents__create-group
              =link_to new_group_path do
                = fa_icon "cog"
            %li.user-contents__edit
              =link_to edit_user_path(current_user) do
                = fa_icon "edit"
          .user-message
            = render "messages/user"
