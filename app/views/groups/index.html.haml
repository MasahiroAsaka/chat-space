!!! 5
%html
  %body
    .wrapper
      / %header
      /   %p チャットグループが作成されました。
      .contents
        .user
          .user-contents
            %h3.user-contents__name
              = current_user.name
            %li.user-contents__create-group
              =link_to new_group_path do
                = fa_icon "cog"
            %li.user-contents__edit
              =link_to edit_user_path(current_user) do
                = fa_icon "edit"
          .user-message
            = render "message/user"
            / = render "user"
        .group
          .group-contents
            %input.group-contents__edit{type: "submit", id: "edit", value: "Edit"}
            = render "message/group"
          .group-message
            = render "message/member"
          %footer
            %form.message{action: "", method: "post"}
              %label.upload{for: "type_message", accesskey: ""}
                %span.upload__text-file
                  %input.upload__text{type: "text", class: "upload__text", name: "type_text", id: "text", placeholder: "type a message"}
                  = fa_icon "image"
                %input.upload__file{type: "file", class: "upload__file", name: "type_message", id: "file"}
              %input.send{type: "button", id: "send", value: "Send"}



/ = render "message/user"
